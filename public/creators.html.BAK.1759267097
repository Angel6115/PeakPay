  <script>
    // --- util: primer recurso que exista ---
    async function firstOk(urls){
      for (const u of urls){
        try{ const r = await fetch(u, { method:'HEAD' }); if (r.ok) return u; }catch(_){}
      }
      return './peak1.png';
    }

    // Ajustes de "encuadre" por creador cuando la foto queda rara
    const IMAGE_POS = {
      'val-cos': 'center 35%',
      'lina-fit': 'center 40%',
      'rio-out': 'center 30%',
    };

    // Fallback local basado en tu estructura /public/photos
    const FALLBACK_CREATORS = [
      { handle:'ink-aria',    name:'ink aria',    cat:'arte',      candidates:['./photos/arte/ink-aria/arte1.jpg','./photos/artistico/ink-aria/inkart.jpg','./photos/cosplay/ink-aria/cover.jpg'] },
      { handle:'lina-fit',    name:'lina fit',    cat:'fitness',   candidates:['./photos/fitness/lina-fit/linafit.jpg','./photos/arte/lina-fit/linaarte.jpg','./photos/artistico/lina-fit/lianart.jpg'] },
      { handle:'noa-lace',    name:'noa lace',    cat:'lenceria',  candidates:['./photos/lenceria/noa-lace/noalen.jpg','./photos/arte/noa-lace/noaarte.jpg','./photos/cosplay/noa-lace/cover.jpg'] },
      { handle:'rio-out',     name:'rio out',     cat:'artistico', candidates:['./photos/artistico/rio-out/rioart.jpg','./photos/arte/rio-out/rioarte.jpg','./photos/fitness/rio-out/riofit.jpg'] },
      { handle:'sasha-dance', name:'sasha dance', cat:'fitness',   candidates:['./photos/fitness/sasha-dance/sashafit.jpg','./photos/artistico/sasha-dance/sahsaart.jpg'] },
      { handle:'sol-light',   name:'sol light',   cat:'cosplay',   candidates:['./photos/cosplay/sol-light/sol1.jpg','./photos/artistico/sol-light/solart.jpg'] },
      { handle:'val-cos',     name:'val cos',     cat:'cosplay',   candidates:['./photos/cosplay/val-cos/val1.jpg','./photos/arte/val-cos/valarte.jpg'] },
      { handle:'zen-well',    name:'zen well',    cat:'arte',      candidates:['./photos/arte/zen-well/zenarte.jpg','./photos/fitness/zen-well/zenfit.jpg'] },
    ];

    // Carga peeks.json si existe; si no, usa fallback
    async function tryJson(urls){
      for (const u of urls){
        try{ const r = await fetch(u); if (r.ok) return r.json(); }catch(_){}
      }
      return null;
    }

    (async function loadCreators(){
      const grid = document.getElementById('grid');
      const empty = document.getElementById('empty');

      const data = await tryJson([
        '/peeks.json?ts='+Date.now(),
        '/public/peeks.json?ts='+Date.now(),
        '/public/peeks.local.json?ts='+Date.now(),
        './peeks.local.json?ts='+Date.now()
      ]);

      let creators = Array.isArray(data?.creators) ? data.creators : null;

      if (!creators) {
        creators = FALLBACK_CREATORS.map(c => ({ id:c.handle, handle:c.handle, name:c.name, sets:0, cat:c.cat, _candidates:c.candidates }));
      } else {
        creators = creators.map(c=>{
          const fb = FALLBACK_CREATORS.find(f=>f.handle === (c.handle||c.id));
          return { ...c, cat: c.cat || fb?.cat || 'arte', _candidates: c.cover ? [c.cover] : (fb ? fb.candidates : []) };
        });
      }

      if (!creators.length){ empty.style.display='block'; return; }

      // Render
      const frag = document.createDocumentFragment();
      for (const c of creators){
        const cover = await firstOk(c._candidates?.length ? c._candidates : ['./peak1.png']);
        const a = document.createElement('a');
        a.href = './peek.html?creator=' + encodeURIComponent(c.id || c.handle || '');
        a.className = 'card';
        a.setAttribute('data-cat', c.cat || 'arte');
        a.innerHTML = `
          <div class="frame">
            <img loading="lazy" decoding="async" src="${cover}" alt="${(c.name||c.handle||'Creator')}">
          </div>
          <div class="meta">
            <h3>${c.name || c.handle || 'Creator'}</h3>
            <span class="tiny">${(c.sets||0)} sets</span>
          </div>
        `;
        const img = a.querySelector('img');
        const pos = IMAGE_POS[(c.handle||'').toLowerCase()];
        if (pos) img.style.objectPosition = pos;
        frag.appendChild(a);
      }
      grid.appendChild(frag);

      // Filtros por chips
      const chips = document.getElementById('chips');
      chips.addEventListener('click', (e)=>{
        const chip = e.target.closest('.chip'); if(!chip) return;
        chips.querySelectorAll('.chip').forEach(c=>c.classList.remove('active'));
        chip.classList.add('active');
        const cat = chip.dataset.cat;
        document.querySelectorAll('#grid .card').forEach(card=>{
          card.style.display = (cat==='all' || card.dataset.cat===cat) ? '' : 'none';
        });
      });
    })();
  </script>

